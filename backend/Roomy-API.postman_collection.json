{
  "info": {
    "name": "Roomy API",
    "description": "Complete API collection for Roomy - Roommate and Rental Finder",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"john_doe\",\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\",\n  \"fullName\": \"John Doe\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Send OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/send-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "send-otp"]
            }
          }
        },
        {
          "name": "Verify OTP",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john@example.com\",\n  \"otp\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/verify-otp",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "verify-otp"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newPassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "change-password"]
            }
          }
        }
      ]
    },
    {
      "name": "User Management",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"fullName\": \"John Updated Doe\",\n  \"bio\": \"Looking for a clean and quiet roommate\",\n  \"lifestyle\": {\n    \"smoking\": false,\n    \"wakeTime\": \"07:00\",\n    \"sleepTime\": \"23:00\",\n    \"pets\": true,\n    \"cleanliness\": \"high\",\n    \"workFromHome\": true\n  },\n  \"socialLinks\": {\n    \"instagram\": \"john_doe_official\",\n    \"linkedin\": \"linkedin.com/in/johndoe\"\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "profile"]
            }
          }
        },
        {
          "name": "Upload Document",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "file",
                  "type": "file",
                  "src": "path/to/your/document.pdf"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/upload-document",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "upload-document"]
            }
          }
        }
      ]
    },
    {
      "name": "Room Management",
      "item": [
        {
          "name": "Create Room",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Spacious Room in Downtown\",\n  \"description\": \"Beautiful room with great natural light and city views\",\n  \"location\": \"Downtown, City Center\",\n  \"rent\": 1200.00,\n  \"amenities\": [\"WiFi\", \"AC\", \"Parking\", \"Gym Access\"],\n  \"preferredRoommate\": {\n    \"ageRange\": \"22-30\",\n    \"profession\": \"Working Professional\",\n    \"gender\": \"Any\"\n  },\n  \"availableFrom\": \"2024-02-01\",\n  \"availableTo\": \"2024-12-31\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms"]
            }
          }
        },
        {
          "name": "Get All Rooms",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/rooms?page=0&size=10&sortBy=createdAt&sortDir=desc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms"],
              "query": [
                {
                  "key": "page",
                  "value": "0"
                },
                {
                  "key": "size",
                  "value": "10"
                },
                {
                  "key": "sortBy",
                  "value": "createdAt"
                },
                {
                  "key": "sortDir",
                  "value": "desc"
                }
              ]
            }
          }
        },
        {
          "name": "Search Rooms",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/rooms?location=downtown&minRent=800&maxRent=1500&verifiedOnly=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms"],
              "query": [
                {
                  "key": "location",
                  "value": "downtown"
                },
                {
                  "key": "minRent",
                  "value": "800"
                },
                {
                  "key": "maxRent",
                  "value": "1500"
                },
                {
                  "key": "verifiedOnly",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Upload Room Images",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "files",
                  "type": "file",
                  "src": "path/to/room/image1.jpg"
                },
                {
                  "key": "files",
                  "type": "file",
                  "src": "path/to/room/image2.jpg"
                }
              ]
            },
            "url": {
              "raw": "{{baseUrl}}/api/rooms/1/images",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "1", "images"]
            }
          }
        },
        {
          "name": "Show Interest",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/rooms/1/interest",
              "host": ["{{baseUrl}}"],
              "path": ["api", "rooms", "1", "interest"]
            }
          }
        }
      ]
    },
    {
      "name": "Messaging",
      "item": [
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"receiverId\": 2,\n  \"content\": \"Hi! I'm interested in your room listing.\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/messages",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages"]
            }
          }
        },
        {
          "name": "Get Conversation",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages/conversation/2",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", "conversation", "2"]
            }
          }
        },
        {
          "name": "Get Unread Count",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/messages/unread-count",
              "host": ["{{baseUrl}}"],
              "path": ["api", "messages", "unread-count"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Get Pending Verifications",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/users/pending-verification",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "users", "pending-verification"]
            }
          }
        },
        {
          "name": "Approve Verification",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{authToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/admin/users/1/verification?status=APPROVED",
              "host": ["{{baseUrl}}"],
              "path": ["api", "admin", "users", "1", "verification"],
              "query": [
                {
                  "key": "status",
                  "value": "APPROVED"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}